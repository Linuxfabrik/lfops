[remi-php81]
name=Remi's RPM repository - PHP 8.1 - Fedora $releasever - $basearch
{% if repo_remi__mirror_url is defined and repo_remi__mirror_url | length %}
baseurl={{ repo_remi__mirror_url }}/fedora/$releasever/php81/$basearch/
{% else %}
#baseurl=http://rpms.remirepo.net/fedora/$releasever/php81/$basearch/
mirrorlist=http://cdn.remirepo.net/fedora/$releasever/php81/$basearch/mirror
{% endif %}
# WARNING: If you enable this repository, you must also enable "remi"
enabled=0
gpgcheck=1
fastestmirror=1
repo_gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-remi-$releasever
{% if repo_remi__basic_auth_login is defined and repo_remi__basic_auth_login | length %}
username={{ repo_remi__basic_auth_login["username"] }}
password={{ repo_remi__basic_auth_login["password"] }}
{% endif %}

