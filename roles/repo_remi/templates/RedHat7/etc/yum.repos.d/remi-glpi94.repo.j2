# This repository only provides GLPI 9.4 and its plugins
# NOTICE: you need at least PHP 5.6

[remi-glpi94]
name=Remi's GLPI 9.4 RPM repository for Enterprise Linux 7 - $basearch
{% if repo_remi__mirror_url is defined and repo_remi__mirror_url | length %}
baseurl={{ repo_remi__mirror_url }}/remi/enterprise/7/glpi94/x86_64/
{% else %}
#baseurl=http://rpms.remirepo.net/enterprise/7/glpi94/$basearch/
#mirrorlist=https://rpms.remirepo.net/enterprise/7/glpi94/httpsmirror
mirrorlist=http://cdn.remirepo.net/enterprise/7/glpi94/mirror
{% endif %}
enabled=0
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-remi
{% if repo_remi__basic_auth_login is defined and repo_remi__basic_auth_login | length %}
username={{ repo_remi__basic_auth_login["username"] }}
password={{ repo_remi__basic_auth_login["password"] }}
{% endif %}
