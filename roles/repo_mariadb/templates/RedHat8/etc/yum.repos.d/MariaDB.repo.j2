[mariadb-main]
name = MariaDB Server
{% if repo_mariadb__mirror_url is defined and repo_mariadb__mirror_url | length %}
baseurl = {{ repo_mariadb__mirror_url }}/MariaDB/mariadb-{{ repo_mariadb__version }}/yum/rhel/8/x86_64
{% else %}
baseurl = https://downloads.mariadb.com/MariaDB/mariadb-{{ repo_mariadb__version }}/yum/rhel/$releasever/$basearch
{% endif %}
gpgkey = file:///etc/pki/rpm-gpg/MariaDB-Server-GPG-KEY
gpgcheck = 1
enabled = 1
module_hotfixes = 1
{% if repo_mariadb__basic_auth_login is defined and repo_mariadb__basic_auth_login | length %}
username={{ repo_mariadb__basic_auth_login["username"] }}
password={{ repo_mariadb__basic_auth_login["password"] }}
{% endif %}

[mariadb-maxscale]
# To use the latest stable release of MaxScale, use "latest" as the version
# To use the latest beta (or stable if no current beta) release of MaxScale, use "beta" as the version
name = MariaDB MaxScale
{% if repo_mariadb__mirror_url is defined and repo_mariadb__mirror_url | length %}
baseurl = {{ repo_mariadb__mirror_url }}/MariaDB/MaxScale/2.4/centos/8/x86_64
{% else %}
baseurl = https://downloads.mariadb.com/MaxScale/2.4/centos/$releasever/$basearch
{% endif %}
gpgkey = file:///etc/pki/rpm-gpg/MariaDB-MaxScale-GPG-KEY
gpgcheck = 1
enabled = 1
{% if repo_mariadb__basic_auth_login is defined and repo_mariadb__basic_auth_login | length %}
username={{ repo_mariadb__basic_auth_login["username"] }}
password={{ repo_mariadb__basic_auth_login["password"] }}
{% endif %}

[mariadb-tools]
name = MariaDB Tools
{% if repo_mariadb__mirror_url is defined and repo_mariadb__mirror_url | length %}
baseurl = {{ repo_mariadb__mirror_url }}/MariaDB/Tools/rhel/8/x86_64
{% else %}
baseurl = https://downloads.mariadb.com/Tools/rhel/$releasever/$basearch
{% endif %}
gpgkey = file:///etc/pki/rpm-gpg/MariaDB-Enterprise-GPG-KEY
gpgcheck = 1
enabled = 1
{% if repo_mariadb__basic_auth_login is defined and repo_mariadb__basic_auth_login | length %}
username={{ repo_mariadb__basic_auth_login["username"] }}
password={{ repo_mariadb__basic_auth_login["password"] }}
{% endif %}
