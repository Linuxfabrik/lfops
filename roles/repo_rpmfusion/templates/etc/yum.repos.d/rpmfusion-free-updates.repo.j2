[rpmfusion-free-updates]
name=RPM Fusion for EL 8 - Free - Updates
{% if repo_rpmfusion__mirror_url is defined and repo_rpmfusion__mirror_url | length %}
baseurl={{ repo_rpmfusion__mirror_url }}/rpmfusion/free-el-updates-released-8/x86_64
{% else %}
mirrorlist=http://mirrors.rpmfusion.org/mirrorlist?repo=free-el-updates-released-8&arch=$basearch
{% endif %}
enabled=1
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-rpmfusion-free-el-8
{% if repo_rpmfusion__basic_auth_login is defined and repo_rpmfusion__basic_auth_login | length %}
username={{ repo_rpmfusion__basic_auth_login["username"] }}
password={{ repo_rpmfusion__basic_auth_login["password"] }}
{% endif %}

