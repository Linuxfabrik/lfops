{% if repo_debian_base__mirror_url is defined and repo_debian_base__mirror_url | length %}
deb https://{{ repo_debian_base__mirror_url }}/debian/ {{ repo_debian_base__dist }} main
deb-src https://{{ repo_debian_base__mirror_url }}/debian/ {{ repo_debian_base__dist }} main

deb https://{{ repo_debian_base__mirror_url }}/debian-security {{ repo_debian_base__dist_security }} main
deb-src https://{{ repo_debian_base__mirror_url }}/debian-security {{ repo_debian_base__dist_security }} main

deb https://{{ repo_debian_base__mirror_url }}/debian/ {{ repo_debian_base__dist_updates }} main
deb-src https://{{ repo_debian_base__mirror_url }}/debian/ {{ repo_debian_base__dist_updates }} main
{% else %}
deb http://deb.debian.org/debian/ {{ repo_debian_base__dist }} main
deb-src http://deb.debian.org/debian/ {{ repo_debian_base__dist }} main

deb http://security.debian.org/debian-security {{ repo_debian_base__dist_security }} main
deb-src http://security.debian.org/debian-security {{ repo_debian_base__dist_security }} main

deb http://deb.debian.org/debian/ {{ repo_debian_base__dist_updates }} main
deb-src http://deb.debian.org/debian/ {{ repo_debian_base__dist_updates }} main
{% endif %}
