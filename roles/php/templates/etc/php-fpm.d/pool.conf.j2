; {{ ansible_managed }}
; 2022071201
{% if item["value"]["by_role"] | default() %}
; Generated by Ansible role: {{ item["value"]["by_role"] }}
{% endif %}

[{{ item["name"] }}]
user = {{ item["value"]["user"] | default('apache') }}
group = {{ item["value"]["group"] | default('apache') }}
listen = /run/php-fpm/{{ item["name"] }}.sock
listen.acl_users = apache,nginx
listen.allowed_clients = 127.0.0.1
pm = dynamic
pm.max_children = 50
pm.start_servers = 5
pm.min_spare_servers = 5
pm.max_spare_servers = 35
slowlog = /var/log/php-fpm/{{ item["name"] }}-slow.log
php_admin_value[error_log] = /var/log/php-fpm/{{ item["name"] }}-error.log
php_admin_flag[log_errors] = on
php_value[session.save_handler] = files
php_value[session.save_path]    = /var/lib/php/session
php_value[soap.wsdl_cache_dir]  = /var/lib/php/wsdlcache

{% if item["value"]["raw"] | default() %}
; raw content
{{ item["value"]["raw"] }}
{% endif %}
